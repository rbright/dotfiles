{
  "assistant": {
    "button": true,
    "enabled": true,
    "dock": "right",
    "default_height": 320,
    "default_width": 480,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "inline_alternatives": [
      {
        "provider": "zed.dev",
        "model": "gpt-4o"
      }
    ],
    "version": "2"
  },
  "auto_update": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_features": {
    "liga": true
  },
  "buffer_font_size": 15,
  "buffer_line_height": "comfortable",
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "chat_panel": {
    "default_width": 240,
    "dock": "right",
    "entry_spacing":"comfortable",
    "scrollbar": {
      "show": "always"
    }
  },
  "collaboration_panel": {
    "button": false,
    "default_width": 240,
    "dock": "left",
    "entry_spacing":"comfortable",
    "scrollbar": {
      "show": "always"
    }
  },
  "confirm_quit": false,
  "cursor_shape": "bar",
  "enable_language_server": true,
  "ensure_final_newline_on_save": true,
  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.git",
    "**/.hg",
    "**/.jj",
    "**/.map.js",
    "**/.svn",
    "**/.venv",
    "**/coverage",
    "**/dist",
    "**/node_modules"
  ],
  "file_types": {
    "Dockerfile": ["Dockerfile*"],
    "Helm": [
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml"
    ]
  },
  "format_on_save": "off",
  "git": {
    "git_gutter": "hide",
    "inline_blame": {
      "delay_ms": 300,
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "git_diff": true,
  "hard_tabs": false,
  "hover_popover_delay": 300,
  "hover_popover_enabled": true,
  "icon_theme": "Catppuccin Mocha",
  "inactive_opacity": 1.0,
  "indent_guides": {
    "active_line_width": 1,
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "enabled": true,
    "line_width": 1
  },
  "inlay_hints": {
    "edit_debounce_ms": 700,
    "enabled": true,
    "scroll_debounce_ms": 50,
    "show_background": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_type_hints": true
  },
  "journal": {
    "hour_format": "hour24"
  },
  "languages": {
    "Go": {
      "format_on_save": "on",
      "formatter": "language_server",
      "inline_completions_disabled_in": ["comment", "string"],
      "preferred_line_length": 120,
      "tab_size": 2
    },
    "GraphQL": {
      "format_on_save": "on",
      "preferred_line_length": 80,
      "tab_size": 2
    },
    "JavaScript": {
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true
        }
      },
      "preferred_line_length": 120,
      "tab_size": 2
    },
    "JSON": {
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "preferred_line_length": 80,
      "tab_size": 2
    },
    "JSX": {
      "format_on_save": "on",
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true,
          "source.organizeImports": true
        }
      },
      "tab_size": 2
    },
    "Markdown": {
      "format_on_save": "on",
      "formatter": "language_server",
      "remove_trailing_whitespace_on_save": false,
      "tab_size": 2
    },
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["pyright", "ruff"],
      "preferred_line_length": 120,
      "tab_size": 4
    },
    "Shell Script": {
      "preferred_line_length": 80,
      "tab_size": 2
    },
    "SQL": {
      "preferred_line_length": 80,
      "tab_size": 4
    },
    "Terraform": {
      "format_on_save": "on",
      "formatter": "language_server",
      "preferred_line_length": 80,
      "tab_size": 2
    },
    "Terraform Vars": {
      "format_on_save": "on",
      "formatter": "language_server",
      "preferred_line_length": 80,
      "tab_size": 2
    },
    "TOML": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      },
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      },
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2
    },
    "XML": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2
    },
    "YAML": {
      "format_on_save": "on",
      "formatter": "prettier",
      "tab_size": 2
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": true,
          "validate": true
        }
      }
    }
  },
  "magnification": 1.0,
  "notification_panel": {
    "button": true,
    "default_width": 240,
    "dock": "right",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_guides": {
      "show": "always"
    },
    "indent_size": 20,
    "scrollbar": {
      "show": null
    }
  },
  "outline_panel": {
    "auto_fold_dirs": true,
    "auto_reveal_entries": true,
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_guides": {
      "show": "always"
    },
    "indent_size": 20,
    "scrollbar": {
      "show": null
    }
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "auto_reveal_entries": true,
    "button": true,
    "default_width": 240,
    "dock": "left",
    "entry_spacing":"comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_guides": {
      "show": "always"
    },
    "indent_size": 20,
    "scrollbar": {
      "show": "always"
    }
  },
  "relative_line_numbers": true,
  "remove_trailing_whitespace_on_save": true,
  "restore_on_startup": "last_session",
  "scrollbar": {
    "diagnostics": "all",
    "git_diff": false,
    "search_results": true
  },
  "show_call_status_icon": true,
  "show_completion_documentation": true,
  "show_completions_on_input": true,
  "show_whitespaces": "all",
  "soft_wrap": "none",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": true
  },
  "tabs": {
    "activate_on_close": "history",
    "always_show_close_button": false,
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "button": false,
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": [".env", "env", ".venv", "venv"]
      }
    },
    "env": {
      "EDITOR": "zed --wait"
    },
    "font_family": "FiraCode Nerd Font",
    "font_features": {
      "calt": false
    },
    "line_height": "comfortable",
    "option_as_meta": false,
    "scrollbar": {
      "show": null
    },
    "shell": "system",
    "toolbar": {
      "breadcrumbs": true
    },
    "working_directory": "current_project_directory"
  },
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ui_font_family": "Zed Plex Sans",
  "ui_font_features": {
    "calt": false
  },
  "ui_font_size": 15,
  "unnecessary_code_fade": 0.5,
  "use_autoclose": true,
  "vim_mode": true
}
