# Editor configuration, see http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_size = 2
max_line_length = 80

# Markdown files
[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2
max_line_length = 80

# TOML files
[*.toml]
indent_size = 2
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 80

# Justfile
# https://just.systems/man/en/
[justfile]
indent_size = 2
max_line_length = 80