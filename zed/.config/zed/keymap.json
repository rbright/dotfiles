// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // Editor
      "ctrl-`": "editor::ToggleFocus",
      // File Finder
      "cmd-p": "file_finder::Toggle",
      // Recent projects/files picker
      "alt-cmd-o": ["projects::OpenRecent", { "create_new_window": false }],
      // Close active item / close window
      "cmd-w": "pane::CloseActiveItem",
      "cmd-shift-w": "workspace::CloseWindow",
      // Tab Navigation (macOS style)
      "cmd-shift-[": "pane::ActivatePrevItem",
      "cmd-shift-]": "pane::ActivateNextItem",
      // Terminal
      "cmd-`": "terminal_panel::Toggle",
      // Agent Panel
      "cmd-shift-a": "agent::ToggleFocus",
      // Git
      "ctrl-alt-cmd-shift-g": "git_panel::ToggleFocus",
      "cmd-alt-p": "git::Worktree",
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // Select All
      "cmd-a": "editor::SelectAll",
      // Pane Splitting (macOS style)
      "cmd-\\": "pane::SplitRight",
      "cmd-shift-\\": "pane::SplitDown",
      // Pane Splitting
      "cmd-shift-h": "pane::SplitLeft",
      "cmd-shift-j": "pane::SplitDown",
      "cmd-shift-k": "pane::SplitUp",
      "cmd-shift-l": "pane::SplitRight",
      // Pane Navigation
      "cmd-h": "workspace::ActivatePaneLeft",
      "cmd-j": "workspace::ActivatePaneDown",
      "cmd-k": "workspace::ActivatePaneUp",
      "cmd-l": "workspace::ActivatePaneRight",
    }
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "alt-cmd-p": null
    }
  },
  {
    "context": "CommitEditor > Editor",
    "bindings": {
      "alt-tab": null
    }
  },
  {
    "context": "GitCommit > Editor",
    "bindings": {
      "alt-tab": null
    }
  },
  {
    "context": "(GitPanel && ChangesList)",
    "bindings": {
      "cmd-s": "git::StageFile"
    }
  },
  {
    "context": "CommitEditor > Editor",
    "bindings": {
      "cmd-shift-g": "git::GenerateCommitMessage"
    }
  }
]
