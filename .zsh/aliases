alias brews='brew list -1'
alias csvcols="cut -d, -f"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias psgrep="ps -ax | grep"
alias py="python"
alias r="/usr/bin/r"
alias rd="rm -rf"
alias tmux="tmux -2"

# Git
alias git="hub"
alias gcl="git clone"
alias ggpl="ggpull"
alias ggpsh="ggpush"
alias gm="git merge"
alias grb="git rebase"
alias gpr="git pull-request"
alias gdpr="git difftool origin/master...origin/$(current_branch)"
alias gt="gittower"
alias gts="gittower --status"

# Ruby
alias rb="ruby"
alias rk="bundle exec rake"
alias gi="gem install"
alias giv="gem install -v"
alias s="spring rspec && testscomplete"
alias rps="bundle exec rake parallel:spec && testscomplete"
alias rtest="bundle exec ruby -Itest && testscomplete"
alias t="rtest && testscomplete"
alias f="foreman start"

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bi="bundle install"
alias bl="bundle list"
alias bp="bundle package"
alias bu="bundle update"

# Rails
alias rc="bundle exec rails console"
alias rg="bundle exec rails generate"
alias rdbm="bundle exec rake db:migrate"
alias rdbr="bundle exec rake db:rollback STEP="
alias ap="bundle exec rake assets:precompile RAILS_ENV=production"

# Python
alias p="python"
alias pi="pip install -r requirements.txt"
alias pf="pip freeze > requirements.txt"
alias pv="virtualenv env"

# Django
alias djc="python manage.py shell"
alias djs="python manage.py runserver"
alias djdbc="python manage.py syncdb"
alias djdbm="python manage.py migrate"

# Ember
alias eb="ember build"
alias es="ember server"
alias et="ember test && testscomplete"

# Heroku
alias hrc="heroku run rails console --app"
alias hrk="heroku rake"
alias hrl="heroku releases --app"
alias hlogs="heroku logs --tail --app"
alias hcache="heroku pg:cache_hit --app"
alias hindex="heroku pg:index_usage --app"

# PostgreSQL
alias pgstart="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pgstop="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log stop -m fast"
