#!/usr/bin/env zsh
alias brews='brew list -1'
alias csvcols="cut -d, -f"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias psgrep="ps -ax | grep"
alias py="python"
alias r="/usr/bin/r"
alias rd="rm -rf"
alias tmux="tmux -2"

# Git
alias git="hub"
alias gcl="git clone"
alias ggpl="ggpull"
alias ggpsh="ggpush"
alias gm="git merge"
alias gom="git merge --no-ff --no-edit"
alias grb="git rebase"
alias gbd="git branch -D"
alias gpr="git pull-request"
alias gdpr="git difftool origin/master...origin/$(current_branch)"
alias gt="gittower"
alias gts="gittower --status"

# Docker
alias di="docker images"
alias db="docker build"
alias dr="docker run -it --rm"
alias dt="docker tag"
alias dp="docker push"
alias dm="docker-machine"
alias dmc="docker-machine create"
alias dcb="docker-compose build"
alias dcu="docker-compose up -d"
alias dcr="docker-compose run --rm"

# Python
alias p="python"
alias py="pypy"
alias p3="python3"
alias pi="pip install -r requirements.txt"
alias pf="pip freeze > requirements.txt"
alias pv="virtualenv env"
alias pva="source ./env/bin/activate"
alias pvd="deactivate"

# Django
alias djp="django-admin.py startproject"
alias dja="python manage.py startapp"
alias djs="python manage.py runserver"
alias djc="python manage.py shell"
alias djdbc="python manage.py makemigrations"
alias djdbm="python manage.py migrate"

# Elixir
alias e="elixir"

# Mix
alias m="mix"
alias mi="mix deps.get"
alias mt="mix test"

# Phoenix
alias pxn="mix phoenix.new"
alias pxdbc="mix ecto.create"
alias pxdbm="mix ecto.migrate"
alias pxgj="mix phoenix.gen.json"
alias pxgm="mix phoenix.gen.model"
alias pxgc="mix phoenix.gen.channel"
alias pxs="mix phoenix.server"
alias pxsi="iex -S mix phoenix.server"
alias pxr="mix phoenix.routes"

# PostgreSQL
alias pgstart="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pgstop="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log stop -m fast"
