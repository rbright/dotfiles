[user]
  name = Ryan Bright
  email = ryan@ryanbright.me
[alias]
  amend = commit --amend
  unstage = reset HEAD --
  last = log -1 HEAD
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[color]
  ui = auto
[commit]
  gpgsign = true
[core]
  excludesfile = ~/.gitignore
[github]
  user = rbright
[gpg]
  program = /usr/local/bin/gpg_wrap
[merge]
  tool = code
[mergetool]
  keepBackup = false
  prompt = false
[push]
  default = current
